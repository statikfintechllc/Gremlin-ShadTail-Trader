{
  "name": "gremlin-shadtail-trader",
  "version": "1.0.0",
  "description": "GremlinGPT's standalone trading core with Electron, Astro, Tailwind, and FastAPI",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "install-all": "./scripts/install-all",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:backend": "cd backend && poetry run uvicorn dashboard_backend.server:app --host 0.0.0.0 --port 8000 --reload",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "wait-on http://localhost:4321 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && poetry build",
    "start": "npm run build && node scripts/bootstrap.js",
    "start:safe": "npm run build && electron . --no-sandbox --disable-dev-shm-usage --disable-gpu",
    "start:display": "npm run build && DISPLAY=:0 electron . --no-sandbox --disable-dev-shm-usage",
    "start:backend": "cd backend && poetry run uvicorn dashboard_backend.server:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && npm run preview",
    "clean": "rimraf frontend/dist frontend/node_modules backend/dist .venv dist-electron",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && poetry run pytest",
    "test:frontend": "cd frontend && npm run test",
    "package": "npm run build && electron-builder",
    "package:all": "npm run build && electron-builder --mac --win --linux",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "electron:build": "electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "setup-deps": "node scripts/setup-dependencies.js",
    "bootstrap": "node scripts/bootstrap.js"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.0",
    "cross-env": "^7.0.0",
    "rimraf": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "build": {
    "appId": "com.gremlin.shadtail-trader",
    "productName": "Gremlin ShadTail Trader",
    "directories": {
      "output": "dist-electron",
      "buildResources": "resources"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "scripts/bootstrap.js",
      "scripts/setup-dependencies.js",
      "package.json",
      "!backend/**/__pycache__",
      "!backend/.venv",
      "!**/*.log",
      "!**/*.tmp"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["!**/__pycache__", "!**/.venv", "!**/*.pyc"]
      },
      {
        "from": "scripts",
        "to": "scripts"
      }
    ],
    "beforeBuild": "scripts/prebuild.js",
    "afterPack": "scripts/postpack.js",
    "mac": {
      "category": "public.app-category.finance",
      "icon": "resources/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "resources/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "dmg": {
      "writeUpdateInfo": false,
      "background": "resources/dmg-background.png"
    }
  },
  "keywords": [
    "trading",
    "finance",
    "gremlin",
    "ai",
    "electron",
    "astro",
    "fastapi",
    "typescript"
  ],
  "author": {
    "name": "StatikFintech LLC",
    "email": "ascend.gremlin@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/statikfintechllc/Gremlin-ShadTail-Trader.git"
  },
  "homepage": "https://github.com/statikfintechllc/Gremlin-ShadTail-Trader#readme"
}